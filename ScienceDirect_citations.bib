author = {Youbei Lin and Chuang Li and Hongyu Li},
keywords = {Major depressive disorder, Machine learning, SHAP analysis, Psychological health, Risk prediction},
abstract = {Background
Major depressive disorder (MDD) presents significant public health challenges due to its increasing prevalence and complex risk factors. This study systematically analyzed data from 2019 to 2023 to explore trends in MDD incidence, symptom progression, and multidimensional influencing factors.
Objective
The study aimed to identify key risk factors and mechanisms of MDD progression through multidimensional variable analysis and machine learning model evaluation, optimizing predictive models to provide a scientific basis for early screening, targeted interventions, and public health policy formulation.
Methods
Data from the U.S. National Health Interview Survey (NHIS) were analyzed using LASSO regression for feature selection and various machine learning models (e.g., AdaBoost, Gradient Boosting, Gaussian NB, Extra Trees) for risk prediction. SHAP value analysis was employed to interpret the models and identify key predictors across psychological, social, and biological domains.
Results
Depression risk was closely associated with psychological health (e.g., PHQ82, ANXLEVEL), social support (e.g., DISCRIM1, PCNTADLT), and biological health (e.g., COGMEMDFF, DEPEV). AdaBoost, Gradient Boosting, Gaussian NB, and Extra Trees demonstrated superior performance in different tasks, with SHAP analysis highlighting the critical role of psychological health in risk prediction and the importance of social support and cognitive deficits in symptom progression.
Conclusions
This study provides a scientific foundation for early screening of MDD, personalized intervention strategies, and public health policy optimization. Future research should expand data coverage, optimize models, and incorporate causal inference methods to enhance the precision and applicability of depression risk prediction.}
}
@article{DALESSANDRO2025116699,
title = {Comparing cognitive reserve between patients with bipolar disorder, other psychiatric disorders and healthy controls: a systematic review and multilevel meta-analysis},
journal = {Psychiatry Research},
volume = {352},
pages = {116699},
year = {2025},
issn = {0165-1781},
doi = {https://doi.org/10.1016/j.psychres.2025.116699},
url = {https://www.sciencedirect.com/science/article/pii/S0165178125003464},
author = {Giulia D'Alessandro and Constanza Sommerhoff and Marta Bort and Michele {De Prisco} and Giovanna Fico and Vincenzo Oliva and Camilla Elefante and Carla Torrent and Silvia Amoretti and Brisa Solé and Meritxell González-Campos and Andrea Murru and Jose Sanchez-Moreno and Anabel Martinez-Aran and Lorenzo Lattanzi and Giulio Perugi and Eduard Vieta and Laura Montejo},
keywords = {Bipolar disorder, Cognitive reserve, Cognitive impairment, Psychiatric disorders, Meta-analysis},
abstract = {Background
Cognitive Reserve (CR) has been proposed as a protective factor against cognitive decline and functional impairment in psychiatric disorders, including bipolar disorder (BD). However, how CR differs between BD, other psychiatric populations, and healthy individuals remains unclear.
Objective
This systematic review and meta-analysis aimed to evaluate differences in CR between individuals with BD, healthy controls (HCs), at-risk populations, and patients with other psychiatric disorders.
Methods
Following PRISMA guidelines, we systematically searched PubMed/MEDLINE, Scopus, PsycINFO, and Web of Science for studies assessing CR in BD and control populations, using validated CR measures or proxies (e.g., education, intelligence quotient, occupational status, leisure activities). A multilevel random-effects meta-analysis was performed to compare CR levels between BD and HCs, and BD and other psychiatric disorders.
Results
Twelve studies (N = 1861 participants) met inclusion criteria. Meta-analytic findings revealed that individuals with BD exhibited significantly lower CR than HCs (SMD = -0.45, 95 % CI: -0.69 to -0.20, I² = 84.5 %), whereas no significant differences emerged between BD and MDD (SMD = -0.23, 95 % CI: -0.49 to 0.03, I² = 41.7 %). Sociodemographic and clinical variables did not significantly moderate CR levels.
Conclusion
CR is lower in BD compared to HCs, suggesting its contribution to cognitive and functional impairments. Conversely, similar CR between BD and MDD highlight shared clinical vulnerabilities. These results underscore the need for targeted interventions to enhance CR in patients with BD. Future research should prioritize standardized CR assessment and investigate modifiable factors contributing to CR development in psychiatric populations.}
}
@article{SOOD2025109764,
title = {A novel hybrid optimization framework integrating genetic algorithm and modified differential evolution optimization towards efficient form-finding of tensegrity structures},
journal = {Structures},
volume = {80},
pages = {109764},
year = {2025},
issn = {2352-0124},
doi = {https://doi.org/10.1016/j.istruc.2025.109764},
url = {https://www.sciencedirect.com/science/article/pii/S2352012425015796},
author = {Shivansh Sood and Sumit Kumar and Subhamoy Sen},
keywords = {Tensegrity, Self-stressed configuration, Genetic algorithm, Modified differential evolution, Form-finding, Hybrid optimization},
abstract = {A crucial challenge in tensegrity design is form-finding, which is to determine a self-equilibrated geometric configuration that satisfies tensegrity attributes. In this regard, traditional gradient/Hessian-based methods often get trapped in saddle points or local minima, making them unsuitable for complex tensegrities. Evolutionary algorithms (EAs), while effective at global optimization, can be computationally expensive. Conventional two-step form-finding approaches first use singular value decomposition (SVD) to extract independent self-stress states to further determine the global tensegrity configuration. However, for multi-cell tensegrities, the increased number of members and shared components lead to coupled self-stress states, rendering SVD-based approaches impractical and necessitating an alternative optimization-driven approach. To address these limitations of existing approaches, this study proposes a hybrid form-finding method combining Genetic Algorithm (GA) with modified Differential Evolution (mDE). By integrating GA’s global search with DE’s advanced mutation and self-adaptive crossover, the approach enhances efficiency while reducing computational costs. Unlike conventional methods, it eliminates the need for SVD and bypasses the iterative selection of self-stress states, inherently ensuring stability constraints and applicability for multi-cell tensegrities. The methodology is validated on various tensegrity configurations, demonstrating its ability to efficiently generate stable, self-equilibrated structures. This novel approach is perceived to offer a scalable and computationally viable solution for tensegrity design, overcoming key limitations of existing methods.}
}
